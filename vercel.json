{
  "builds": [
    { "src": "api/game.py", "use": "@vercel/python" },
    { "src": "public/index.html", "use": "@vercel/static" },
    { "src": "public/*.js", "use": "@vercel/static" },
    { "src": "public/*.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/move", "dest": "/api/game.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
